spring.application.name=backend
server.port=8090
spring.output.ansi.enabled=always

# db
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver
# url
spring.datasource.url=jdbc:mysql://localhost:3306/hack
# dbid
spring.datasource.username=root
# dbpw
spring.datasource.password=YOUR_DB_PASSWORD

mybatis.mapper-locations=classpath:/mapper/*.xml
mybatis.type-aliases-package=com.example.backend.model
mybatis.type-handlers-package=com.example.backend.model

# 데이터베이스 초기화 설정
spring.sql.init.mode=always
spring.sql.init.schema-locations=classpath:schema.sql
spring.sql.init.continue-on-error=true

app.openai.model=gpt-4o-mini
app.openai.timeout-ms=45000
app.openai.api-key=YOUR_OPENAI_API_KEY